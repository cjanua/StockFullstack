{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/build": true,
        "**/*.log": true,
        "**/*.next": true,
        "**/next-env.d.ts": true,
        "**/venv": true,


    },
    "prettier.configPath": ".prettier/.prettierrc",
    "css.validate": false,
    "tailwindCSS.validate": true,
    "editor.tabSize": 2,
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[javascriptreact]": {
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.tabSize": 2
    },
    "[typescriptreact]": {
        "editor.tabSize": 2
    },
    "[python]": {
        "editor.tabSize": 4
    }
}